{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "index.ts",
        "defendant.ts",
        "juries/isjury.ts",
        "juries/jury.ts",
        "juries/notjury.ts",
        "juries/string.contains.jury.ts",
        "juries/string.maxLength.jury.ts",
        "juries/string.minLength.jury.ts",
        "lawbook.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
